{
  "name": "npg",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/npg/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/../tools/npg",
        "main": "tools/npg/src/index.ts",
        "tsConfig": "tools/npg/tsconfig.lib.json",
        "assets": [
          "tools/npg/*.md",
          {
            "input": "./tools/npg/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./tools/npg/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./tools/npg",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./tools/npg",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "tools/npg/**/*.ts",
          "tools/npg/generators.json",
          "tools/npg/executors.json",
          "tools/npg/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "tools/npg/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": [
    "scope:tools"
  ]
}
